{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017", "es6", "es2018", "dom.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "incremental": true
  },
  "types": ["kakao.maps.d.ts"],
  "exclude": [
    "node_modules",
    "bundles",
    "dist",
    ".next",
    "out",
    "next.config.js",
    "bundles",
    "test/*"
  ],
  "include": ["script/*.js", "**/*.ts", "**/*.tsx"]
}
